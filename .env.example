# ==============================================
# Frontend Environment Configuration
# ==============================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real credentials to version control

# ==============================================
# API Configuration
# ==============================================
# Backend API base URL
# Development: http://localhost:8000/api or http://127.0.0.1:8000/api
# Production: https://your-backend-domain.com/api
VITE_API_URL=http://localhost:8000/api

# ==============================================
# Frontend Configuration
# ==============================================
# Frontend base URL (used for redirects, etc.)
VITE_APP_URL=http://localhost:5173

# Application Name
VITE_APP_NAME=Cohort Management System

# ==============================================
# OAuth Configuration (if using Google/LinkedIn OAuth)
# ==============================================
# Google OAuth Client ID
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# LinkedIn OAuth Client ID
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable features in frontend
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# ==============================================
# Upload Configuration
# ==============================================
# Maximum file upload size in MB
VITE_MAX_FILE_SIZE_MB=10

# Allowed file types for uploads (comma-separated)
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.doc,.docx

# ==============================================
# Timeout Configuration
# ==============================================
# API request timeout in milliseconds
VITE_API_TIMEOUT_MS=30000

# Notification auto-hide duration in milliseconds
VITE_NOTIFICATION_DURATION_MS=5000

# ==============================================
# Cache Configuration
# ==============================================
# Cache duration for API responses in seconds
VITE_CACHE_DURATION_SEC=300

# Enable/disable client-side caching
VITE_ENABLE_CACHE=true

# ==============================================
# Pagination Configuration
# ==============================================
# Default page size for lists
VITE_DEFAULT_PAGE_SIZE=20

# Maximum page size allowed
VITE_MAX_PAGE_SIZE=100

# ==============================================
# Debug Configuration (Development Only)
# ==============================================
# Enable verbose logging
VITE_DEBUG_LOGGING=false

# Enable Redux DevTools
VITE_DEBUG_REDUX=false

# Show performance metrics
VITE_DEBUG_PERFORMANCE=false

# ==============================================
# Analytics (if using Google Analytics, etc.)
# ==============================================
VITE_GA_TRACKING_ID=
VITE_ANALYTICS_ENABLED=false

# ==============================================
# Environment Indicator
# ==============================================
# Used to show environment badge in UI
VITE_ENV=development
